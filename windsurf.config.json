{
  "version": "1.0.0",
  "project": {
    "name": "SampleMind AI",
    "description": "AI-powered audio intelligence platform for music producers",
    "repository": "https://github.com/lchtangen/SampleMind-AI---Beta"
  },
  
  "core": {
    "autoSave": "afterDelay",
    "autoSaveDelay": 1000,
    "fileExclude": ["**/.git", "**/.DS_Store", "**/node_modules", "**/__pycache__", "**/*.pyc"],
    "excludeGitIgnored": true,
    "telemetry": {
      "enable": true,
      "crashReports": true,
      "usageData": true
    }
  },

  "editor": {
    "theme": "Cyberpunk Neon",
    "fontFamily": "'JetBrains Mono', 'Fira Code', 'Cascadia Code', 'Menlo', 'Monaco', 'Courier New', monospace",
    "fontLigatures": true,
    "fontSize": 14,
    "fontWeight": "400",
    "lineHeight": 1.7,
    "letterSpacing": 0.3,
    "tabSize": 2,
    "insertSpaces": true,
    "wordWrap": "on",
    "cursorStyle": "line-thin",
    "cursorBlinking": "smooth",
    "smoothScrolling": true,
    "mouseWheelZoom": true,
    "minimap": {
      "enabled": true,
      "showSlider": "always",
      "renderCharacters": false,
      "maxColumn": 120,
      "scale": 1.5
    },
    "bracketPairColorization": {
      "enabled": true,
      "independentColorPoolPerBracketType": true
    },
    "formatOnSave": true,
    "formatOnPaste": true,
    "formatOnType": true,
    "renderWhitespace": "selection",
    "renderLineHighlight": "all",
    "renderIndentGuides": true
  },

  "workbench": {
    "colorTheme": "Cyberpunk Neon",
    "iconTheme": "material-icon-theme",
    "productIconTheme": "material-icon-theme",
    "list.horizontalScrolling": true,
    "list.smoothScrolling": true,
    "activityBar": {
      "visible": true,
      "position": "left",
      "width": 60,
      "background": "#0a0a14cc",
      "foreground": "#00f7ff",
      "inactiveForeground": "#00f7ff99"
    },
    "sideBar": {
      "background": "#0a0a14cc",
      "border": "1px solid #00f7ff33",
      "foreground": "#e1e1e6"
    },
    "statusBar": {
      "background": "#0a0a14cc",
      "foreground": "#e1e1e6",
      "borderTop": "1px solid #00f7ff33"
    }
  },

  "ai": {
    "enabled": true,
    "model": "claude-3-opus-20240229",
    "temperature": 0.7,
    "maxTokens": 4000,
    "features": {
      "codeCompletion": true,
      "chat": true,
      "inlineSuggestions": true
    }
  },

  "versionControl": {
    "git": {
      "enabled": true,
      "autoFetch": true,
      "autoStash": true,
      "showInlineBlame": true
    },
    "github": {
      "enabled": true
    }
  },

  "terminal": {
    "integrated": {
      "shell": {
        "osx": "zsh"
      },
      "fontFamily": "Fira Code",
      "fontSize": 13
    }
  },

  "debug": {
    "console": {
      "fontSize": 13,
      "wordWrap": true
    },
    "inlineValues": true
  },

  "mcpServers": {
    "enabled": true,
    "servers": [
      {
        "name": "Python",
        "type": "python",
        "path": "python",
        "args": ["-m", "pylsp"],
        "enabled": true
      },
      {
        "name": "TypeScript/JavaScript",
        "type": "typescript",
        "path": "node",
        "args": ["--loader", "ts-node/esm", "node_modules/typescript-language-server/lib/cli.js", "--stdio"],
        "enabled": true
      },
      {
        "name": "Rust Analyzer",
        "type": "rust",
        "path": "rust-analyzer",
        "enabled": true
      },
      {
        "name": "Go",
        "type": "go",
        "path": "gopls",
        "enabled": true
      },
      {
        "name": "Java",
        "type": "java",
        "path": "jdtls",
        "enabled": true
      },
      {
        "name": "C/C++",
        "type": "cpp",
        "path": "clangd",
        "enabled": true
      },
      {
        "name": "C#",
        "type": "csharp",
        "path": "omnisharp",
        "enabled": true
      },
      {
        "name": "Ruby",
        "type": "ruby",
        "path": "solargraph",
        "enabled": true
      },
      {
        "name": "PHP",
        "type": "php",
        "path": "phpactor",
        "enabled": true
      },
      {
        "name": "Kotlin",
        "type": "kotlin",
        "path": "kotlin-language-server",
        "enabled": true
      }
    ]
  },

  "apiKeys": {
    "openai": "${env:OPENAI_API_KEY}",
    "github": "${env:GITHUB_TOKEN}",
    "aws": {
      "accessKeyId": "${env:AWS_ACCESS_KEY_ID}",
      "secretAccessKey": "${env:AWS_SECRET_ACCESS_KEY}",
      "region": "${env:AWS_DEFAULT_REGION}"
    }
  },

  "extensions": {
    "recommendations": [
      "ms-python.python",
      "ms-python.vscode-pylance",
      "ms-python.isort",
      "ms-python.black-formatter",
      "ms-python.flake8",
      
      "dbaeumer.vscode-eslint",
      "esbenp.prettier-vscode",
      "bradlc.vscode-tailwindcss",
      "vue.volar",
      "svelte.svelte-vscode",
      
      "ms-toolsai.jupyter",
      "ms-toolsai.jupyter-keymap",
      "ms-azuretools.vscode-docker",
      
      "hashicorp.terraform",
      "ms-azuretools.vscode-azureterraform",
      "ms-kubernetes-tools.vscode-kubernetes-tools",
      "amazonwebservices.aws-toolkit-vscode",
      "ms-vscode.azure-account",
      
      "github.copilot",
      "github.copilot-chat",
      "ms-vscode-remote.remote-containers",
      "ms-vscode-remote.remote-ssh"
    ],
    "autoUpdate": true,
    "autoInstall": true
  },

  "workspace": {
    "autoSave": "afterDelay",
    "autoSaveDelay": 1000,
    "exclude": {
      "**/node_modules": true,
      "**/dist": true,
      "**/build": true,
      "**/.next": true,
      "**/out": true,
      "**/__pycache__": true,
      "**/*.pyc": true
    }
  },

  "keybindings": [
    {
      "key": "ctrl+shift+p",
      "command": "workbench.action.quickOpen"
    },
    {
      "key": "f5",
      "command": "workbench.action.debug.start"
    },
    {
      "key": "f9",
      "command": "editor.debug.action.toggleBreakpoint"
    }
  ],

  "mcpServers": {
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem"
      ],
      "roots": [
        "/Users/lchtangen/Documents/SampleMind AI/SampleMind-AI---Beta"
      ]
    }
  }
}
