# SampleMind AI Backend Configuration

# Application
APP_NAME=SampleMind AI
APP_VERSION=0.1.0-beta
DEBUG=true
ENVIRONMENT=development

# Security
SECRET_KEY=change-this-to-a-random-secret-key-in-production-minimum-32-characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,https://samplemind.ai

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/samplemind
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# File Storage
UPLOAD_DIR=uploads/audio
MAX_UPLOAD_SIZE=104857600
ALLOWED_AUDIO_FORMATS=mp3,wav,flac,aiff,ogg

# AWS S3 (Optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET_NAME=samplemind-audio

# AI Services
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GOOGLE_API_KEY=

# Monitoring
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# Email (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@samplemind.ai
