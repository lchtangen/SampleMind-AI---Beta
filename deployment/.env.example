# MongoDB Configuration
MONGODB_URL=mongodb://username:password@mongodb:27017/samplemind
MONGO_USERNAME=admin
MONGO_PASSWORD=secure_password_here

# Redis Configuration
REDIS_URL=redis://:redis_password@redis:6379/0
REDIS_PASSWORD=redis_secure_password

# JWT Configuration
SECRET_KEY=your-very-secure-secret-key-minimum-32-characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# AI API Keys
GOOGLE_AI_API_KEY=your_google_ai_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Celery Configuration
CELERY_BROKER_URL=redis://:redis_password@redis:6379/0
CELERY_RESULT_BACKEND=redis://:redis_password@redis:6379/0

# ChromaDB Configuration
CHROMA_AUTH_TOKEN=your_chroma_auth_token

# Application Configuration
ENVIRONMENT=production
API_URL=https://api.samplemind.ai/api/v1
FRONTEND_URL=https://samplemind.ai

# Docker Registry (for CI/CD)
DOCKER_USERNAME=your_dockerhub_username
DOCKER_PASSWORD=your_dockerhub_password_or_token

# Vercel Deployment (for frontend)
VERCEL_TOKEN=your_vercel_token
VERCEL_ORG_ID=your_vercel_org_id
VERCEL_PROJECT_ID=your_vercel_project_id

# Database Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
S3_BACKUP_BUCKET=samplemind-backups
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# Monitoring & Logging
SENTRY_DSN=your_sentry_dsn_here
LOG_LEVEL=info
ENABLE_METRICS=true
PROMETHEUS_PORT=9090

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
FROM_EMAIL=noreply@samplemind.ai

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Security
ALLOWED_ORIGINS=https://samplemind.ai,https://www.samplemind.ai
CORS_ALLOWED_ORIGINS=["https://samplemind.ai", "https://www.samplemind.ai"]
SECURE_COOKIES=true
