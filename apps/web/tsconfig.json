{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["./components/*", "./src/components/*"],
      "@/contexts/*": ["./contexts/*", "./src/contexts/*"],
      "@/hooks/*": ["./hooks/*", "./src/hooks/*"],
      "@/lib/*": ["./src/lib/*"],
      "@/features/*": ["./src/features/*"],
      "@/design-system/*": ["./src/design-system/*"],
      "@/*": ["./src/*"],
      "@samplemind-ai/*": ["../../packages/*/src"]
    }
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "src/App.tsx",
    "src/app/**",
    "src/components/**",
    "src/design-system/**",
    "src/features/**",
    "vite.config.ts"
  ]
}
